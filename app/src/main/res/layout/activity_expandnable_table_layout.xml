<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.ExpandnableTableLayoutActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"></LinearLayout>

        <com.bluetree.jetpacksample.activity.MyFrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.bluetree.jetpacksample.activity.MyHorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:scrollbarSize="0dp"
                android:fadingEdge="none"
                >
                <com.bluetree.jetpacksample.activity.MyFrameLayout2
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rv_move"
                        android:layout_width="wrap_content"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:layout_height="wrap_content">

                    </android.support.v7.widget.RecyclerView>
                </com.bluetree.jetpacksample.activity.MyFrameLayout2>
            </com.bluetree.jetpacksample.activity.MyHorizontalScrollView>

            <com.bluetree.jetpacksample.activity.FrameRecycleView
                android:id="@+id/lv_fixed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                />
        </com.bluetree.jetpacksample.activity.MyFrameLayout>

    </LinearLayout>
</ScrollView>